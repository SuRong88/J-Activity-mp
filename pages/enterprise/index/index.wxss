.enterprise-list{
    padding: 0 30rpx;
}
.enterprise-item{
    padding: 24rpx 0 32rpx;
    border-bottom: 2rpx solid #F5F5F5;
}
.enterprise-item:last-child{
    border-bottom: 0;
}
.enterprise-item .item-top {
    position: relative;
}

.enterprise-item .item-img {
    width: 100%;
    height: 362rpx;
}

.enterprise-item .item-brief {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    line-height: 56rpx;
    padding-left: 26rpx;
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 100%);
    font-size: 22rpx;
    color: rgba(255, 255, 255, 1);
}

.enterprise-item .item-bottom {}

.enterprise-item .item-tit-box {
    padding: 36rpx 0 26rpx;
}

.enterprise-item .item-avatar {
    width: 52rpx;
    height: 52rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.enterprise-item .item-tit {
    line-height: 1.1;
    font-size: 32rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
}

.enterprise-item .item-desc {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
}

.enterprise-item .item-btn {
    margin-top: 32rpx;
    width: 176rpx;
    height: 56rpx;
    background: rgba(255, 255, 255, 1);
    border: 2rpx solid rgba(252, 127, 3, 1);
    font-size: 26rpx;
    color: rgba(252, 127, 3, 1);
}

.enterprise-item .btn-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
}