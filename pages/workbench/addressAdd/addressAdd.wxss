.content {
    padding: 50rpx;
}

.info-list {}

.info-item {
    margin-bottom: 40rpx;
}

.info-item:last-child {
    margin-bottom: 0rpx;
}

.item-label {
    margin-bottom: 14rpx;
    line-height: 42rpx;
    position: relative;
}

.address-txt {
    line-height: 1;
    padding-right: 40rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    margin-left: 40rpx;
}

.arrow-icon {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 15rpx;
    height: 24rpx;
}

.label {
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
    white-space: nowrap;
}

.label-desc {
    font-size: 26rpx;
    color: #999;
}

.item-enter {
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
}

.holder-class {
    color: rgba(153, 153, 153, 1);
}

.item-enter-textarea {
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    padding: 22rpx 30rpx;
    height: 178rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
}

.holder-class-textarea {
    color: rgba(153, 153, 153, 1);
}

