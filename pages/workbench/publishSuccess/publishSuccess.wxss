.success-box {
    padding: 17.5vh 0;
}

.success-img {
    width: 248rpx;
    height: 248rpx;
    display: block;
    /* margin: 0 auto 68rpx; */
    margin: 0 auto 40rpx;
}

.success-txt {
    font-size: 32rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
}

.common-btn {
    margin: 0 auto;
}

.btn-box {}

.btn-view {
    margin-bottom: 30rpx;
}

.btn-share {}

.share-mask,
.poster-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
}

.share-box {
    padding: 36rpx 60rpx 28rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
}

.share-item {}

.share-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 8rpx;
}

.share-txt {
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
}

.poster-mask {
    padding-top: 10vh;
}

.poster-box {
    width: 634rpx;
    width: 600rpx;
    margin: 0 auto;
}

.poster-img {
    display: block;
    /* margin: 0 auto 100rpx; */
    margin: 0 auto 5vh;
    width: 100%;
    border-radius: 10rpx;
}

.btn-save {
    width: 340rpx;
    margin: 0 auto;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 74rpx;
    background: rgba(252, 127, 3, 1);
    border-radius: 38px;
    text-align: center;
}
