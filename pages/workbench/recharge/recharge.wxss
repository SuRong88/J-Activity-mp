/* pages/workbench/recharge/recharge.wxss */

.content {
    box-sizing: border-box;
    padding: 0 36rpx 0 50rpx;
}

.text {
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 42rpx;
    margin-top: 50rpx;
    margin-bottom: 16rpx;
}

.inp {
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    padding-left: 28rpx;
}

.holder-class {
    color: rgba(153, 153, 153, 1);
}

.imgs-box {
    width: 100%;
}

.img-item {
    width: 300rpx;
    height: 300rpx;
    position: relative;
    margin-bottom: 30rpx;
    border: 2rpx solid rgba(228, 228, 228, 1);
    overflow: hidden;
}

.img-item:nth-child(odd) {
    margin-right: 30rpx;
}

.img-item:last-child {
    border: none;
}

.img-item .photo {
    width: 300rpx;
    height: 300rpx;
}

.img-item .icon-delete {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    /* background-color: #fff; */
}

.upload-icon {
    width: 300rpx;
    height: 300rpx;
}

.btn {
    width: 606rpx;
    height: 90rpx;
    background: rgba(252, 127, 3, 1);
    border-radius: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 90rpx;
    margin-left: 22rpx;
    text-align: center;
    position: fixed;
    bottom: 68rpx;
}
