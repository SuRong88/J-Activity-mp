page {
    background: rgba(249, 249, 249, 1) !important;
}

.content {
    padding-bottom: 200rpx;
}

.resource-list {}

.resource-item {
    padding: 36rpx 40rpx 0rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    position: relative;
}

.resource-item:last-child {
    margin-bottom: 0;
}

.resource-item:last-child {
    margin-bottom: 0;
}

.item-top {}

.item-top-l {
    padding-right: 34rpx;
}

.item-avatar {
    width: 132rpx;
    height: 132rpx;
    border-radius: 50%;
}

.item-top-r {
    padding-bottom: 28rpx;
    border-bottom: 2rpx solid #F5F5F5;
}

.item-tit {
    font-size: 32rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
    margin-bottom: 16rpx;
}

.item-tags {
    margin-bottom: 20rpx;
}

.item-tag {
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
}

.item-spe {
    font-size: 18rpx;
    margin: 0 26rpx;
    color: #DDD9D9;
}

.item-info {
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 34rpx;
    margin-bottom: 16rpx;
}

.item-info:last-child {
    margin-bottom: 0;
}

.item-time {}

.item-num .num {
    color: #FC5403;
}

.item-select-btn {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
}

.select-icon {
    width: 36rpx;
    height: 36rpx;
}

/* 底部固定 */
.bottom-box {
    height: 124rpx;
    background-color: #fff;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    padding: 0 40rpx;
    border-top: 2rpx solid #E3E1E1;
}

.select-num {
    font-size: 26rpx;
    color: rgba(224, 32, 32, 1);
}

.btn-confirm {
    width: 208rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    text-align: center;
    color: rgba(255, 255, 255, 1);
    background: rgba(252, 127, 3, 1);
    border-radius: 10rpx;
}
