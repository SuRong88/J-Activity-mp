page {
    background-color: #F9F9F9 !important;
}

.content {
    padding-top: 18rpx;
}

.manage-list {
    background-color: #fff;
    padding: 0 34rpx;
}

.manage-item {
    height: 88rpx;
    position: relative;
    border-bottom: 2rpx solid #F5F5F5;
}

.manage-item:last-child {
    border: 0;
}

.item-icon {
    width: 40rpx;
    height: 40rpx;
}

.item-txt {
    padding-left: 26rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
}

.item-icon-arrow {
    width: 15rpx;
    height: 24rpx;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}
