/* pages/workbench/index/index.wxss */

.container {
    width: 100%;
    min-height: 742rpx;
    background:rgba(249,249,249,1);
}

.content {
    width: 100%;
    height: 100%;
}

/* 头部部分 */

.header-box {
    width: 100%;
    height: 412rpx;
    position: relative;
}

.banner-box {
    height: 412rpx;
}

.banner-main {
    height: 372rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
    box-sizing: border-box;
    padding-top: 50rpx;
}

.main-head {
    width: 80%;
    height: 162rpx;
    margin-left: 38rpx;
}

.logo {
    width: 162rpx;
    height: 162rpx;
    border-radius: 50%;
}

.right-box {
    margin-left: 24rpx;
}

.title {
    width: 346rpx;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 44rpx;
    letter-spacing: 2rpx;
}

.logout {
    width: 50rpx;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
}

.icon-left {
    width: 20rpx;
    height: 20rpx;
    margin-left: 8rpx;
}

.right {
    width: 160rpx;
    height: 60rpx;
    background: linear-gradient(90deg, rgba(255, 195, 24, 1) 0%, rgba(250, 145, 0, 1) 100%);
    border-radius: 100rpx 0 0 100rpx;
    position: absolute;
    right: 0;
    top: 130rpx;
    padding-left: 10rpx;
}

.right-tit {
    width: 104rpx;
    height: 36rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
}

.main-bottom {
    height: 132rpx;
    margin-top: 36rpx;
    box-sizing: border-box;
    padding: 0 100rpx;
}

.center-box {
    background: #fff;
    width: 2rpx;
    height: 36rpx;
}

.bottom-box text {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 32rpx;
}

.circle {
    width: 100%;
    height: 40rpx;
    background: #fff;
    border-radius: 30rpx 30rpx 0 0;
    background: #fff;
    position: absolute;
    top: 372rpx;
    left: 0;
    z-index: 3;
}

/* 中间部分 */

.total {
    height: 146rpx;
    box-sizing: border-box;
    padding: 0 80rpx 40rpx;
    background: #fff;
}

.total text {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 32rpx;
    letter-spacing: 2rpx;
}

.total .total-text {
    color: rgba(252, 127, 3, 1);
    font-size: 40rpx;
    line-height: 56rpx;
}

/* 底部区域 */

.footer-box {
    overflow: scroll;
    background: #fff;
    margin-top: 20rpx;
    margin-bottom: 178rpx;
}

.icon-box {
    width: 33.33%;
    height: 200rpx;
    border-bottom: 2rpx solid #f5f5f5;
    border-right: 2rpx solid #f5f5f5;
}

.icon-box:nth-child(3n+3) {
    border-right: none;
}

.icon-box:nth-child(7),
.icon-box:nth-child(8) {
    border-bottom: 0;
}

.footer-box text {
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 36rpx;
    letter-spacing: 2rpx;
    font-size: 26rpx;
}

.image-box {
    width: 52rpx;
    height: 52rpx;
}

/* 消息提示 */
.message-box {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    position: fixed;
    right: 30rpx;
    bottom: 140rpx;
    background: #fff;
    box-sizing: border-box;
    padding: 26rpx;
    box-shadow:0px 4rpx 20rpx 0px rgba(113,113,113,0.5);
}

.img-message {
    width: 48rpx;
    height: 48rpx;
    position: relative;
}

.img-message::after {
    width: 12rpx;
    height: 12rpx;
    background: rgba(230, 33, 43, 1);
    margin-bottom: 36rpx;
    content: '';
    position: absolute;
    right: 0;
    top: 0;
}

/* 弹窗 */
