
.data-menu {
    padding: 50rpx;
    position: relative;
    z-index: 2;
    background-color: #fff;
}

.data-item {
    margin-bottom: 38rpx;
}

.data-item:last-child {
    margin-bottom: 0;
}

.item-label {
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 42rpx;
    margin-bottom: 16rpx;
}

.upload-icon {
    width: 300rpx;
    height: 300rpx;
}

.item-enter {
    padding-left: 28rpx;
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
}

.item-placeholder {
    color: rgba(153, 153, 153, 1);
}