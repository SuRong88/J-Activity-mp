.content {
    padding-bottom: 200rpx;
}

.job-list {
    background: rgba(249, 249, 249, 1);
}

.job-item {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.job-item:last-child {
    margin-bottom: 0;
}

.job-item-hd {
    height: 130rpx;
    padding: 0 40rpx;
    border-bottom: 2rpx solid #F9F9F9;
    position: relative;
}

.item-icon {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    margin-top: -2rpx;
    margin-right: 30rpx;
}

.job-name {
    font-size: 34rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
}

.job-num {
    margin-left: 30rpx;
    font-size: 26rpx;
    color: rgba(252, 127, 3, 1);
}


.job-item.spread .item-icon-arrow {
    transform: rotate(180deg);
}

.item-icon-arrow {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 50%;
    right: 40rpx;
    transform: translateY(-50%);
}

.job-item-bd {}

.service-list {}

.service-item {
    padding: 30rpx 40rpx;
    border-bottom: 2rpx solid #F9F9F9;
}

.service-item:last-child {
    margin-bottom: 0;
}

.service-item-l {}

.service-item-r {}

.service-item-index {
    width: 60rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
}

.service-item-name-price {
    margin-bottom: 20rpx;
}

.service-item-name {
    font-size: 32rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
}

.service-item-price {
    font-size: 32rpx;
    color: rgba(252, 127, 3, 1);
}

.service-item-info {
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
    margin-bottom: 16rpx;
}

.service-item-info:last-child {
    margin-bottom: 0;
}

.service-item-enter-box {
    padding-top: 4rpx;
}

.service-item-enter {
    width: 138rpx;
    height: 46rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    text-align: center;
}

.holder-class {
    color: rgba(153, 153, 153, 1);
}

.confirm-btn.disabled {
    background: rgba(199, 195, 195, 1);
}


/* 手机 验证码box */
.phone-box {
    width: 680rpx;
    margin: 0 auto;
    box-shadow: 0px 0px 12rpx 0px rgba(153, 153, 153, 0.2);
    border-radius: 10rpx;
    padding: 0 50rpx;
    margin-top: 60rpx;
}

.enter-item {
    height: 122rpx;
    padding: 0 16rpx;
}

.enter-item:first-child {
    border-bottom: 2rpx solid #F9F9F9;
}

.item-icon {
    width: 42rpx;
    height: 42rpx;
}

.enter-placeholder {
    font-size: 32rpx;
    color: rgba(153, 153, 153, 1);
}

.item-enter {
    padding-left: 26rpx;
    font-size: 32rpx;
    color: rgba(153, 153, 153, 1);
}

.send-btn {
    width: 160rpx;
    line-height: 54rpx;
    text-align: center;
    background: rgba(252, 127, 3, 1);
    border-radius: 8rpx;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 1);
}

/* 图形验证码 */
.captcha-box {}

.captcha-box .box-main {
    margin-bottom: 14rpx;
}

.captcha-box .box-main .captcha-enter {
    height: 84rpx;
    margin-right: 110rxp;
    background: rgba(243, 243, 243, 1);
    border-radius: 8rpx;
    font-size: 30rpx;
    color: #333;
    padding-left: 28rpx;
}

.captcha-box .box-main .captcha-enter .captcha-enter-placeholder {
    color: rgba(153, 153, 153, 1);
}

.captcha-box .box-main .captcha-img {
    width: 170rpx;
    height: 72rpx;
    flex-shrink: 0;
}

.captcha-box .tip {
    padding-left: 12rpx;
    font-size: 24rpx;
    color: rgba(224, 32, 32, 1);
}

/* 图形验证码 end*/
