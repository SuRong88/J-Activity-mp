/* pages/workbench/notify/notify.wxss */
page {
    background: #f6f6f6!important;
}

.content {
    box-sizing: border-box;
    padding: 0 30rpx;
}

.text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
    margin: 40rpx 0 24rpx;
}

.notify-box {
    min-height: 220rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 26rpx 42rpx 26rpx;
    /* margin-bottom: */
}

.tit {
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
}

.redDot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    background: rgba(230, 33, 43, 1);
}

.detail {
    font-size: 26prx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 46rpx;
    margin-top: 36rpx;
}
