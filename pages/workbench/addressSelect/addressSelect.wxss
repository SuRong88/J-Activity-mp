.filter-hd {
    padding-bottom: 24rpx;
    border-bottom: 2rpx solid rgba(217, 215, 215, 0.3);
}

.filter-select-box {
    height: 120rpx;
    box-shadow: 0px 4px 18px 0px rgba(248, 245, 245, 1);
    background-color: #fff;
    padding: 34rpx 40rpx 0rpx;
}

.filter-select-box.address {
    align-items: center;
    font-size: 28rpx;
    color: #666;
    padding: 0rpx 40rpx;
}

.filter-select-item {
    height: 56rpx;
    line-height: 52rpx;
    text-align: center;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: rgba(252, 127, 3, 1);
    border: 2rpx solid rgba(252, 127, 3, 1);
    margin-right: 30rpx;
    position: relative;
}

.filter-select-item:last-child {
    margin-right: 0;
}

.filter-select-item .item-icon {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 32rpx;
    height: 26rpx;
}

.filter-bd {}


.filter-con {
    /* height: calc(100vh - 240rpx); */
