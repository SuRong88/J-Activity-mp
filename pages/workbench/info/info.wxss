/* pages/workbench/message/message.wxss */
.content {
    box-sizing: border-box;
    padding: 50rpx;
}

.text {
    width: 148rpx;
    height: 42rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 42rpx;
}

.img-box {
    margin-top: 20rpx;
    width: 130rpx;
    height: 130rpx;
}

.tit {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    text-align: right;
}

.tel-tit {
    width: 100%;
    background: #f5f5f5;
    border-radius: 8rpx;
    margin-top: 20rpx;
}

.tel-text {
    height: 80rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    box-sizing: border-box;
    padding-left: 30rpx;
}

.text-area {
    height: 250rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    padding: 30rpx;
    margin-top: 20rpx;
}

.holder-class{
   color: rgba(153, 153, 153, 1); 
}

.submit {
    width: 606rpx;
    height: 90rpx;
    background: rgba(252, 127, 3, 1);
    border-radius: 45rpx;
    margin-left: 22rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 90rpx;
    text-align: center;
    position: fixed;
    bottom: 68rpx;
}
