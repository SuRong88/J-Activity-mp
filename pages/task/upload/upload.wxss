/* pages/task/upload/upload.wxss */
.banner {
    position: relative;
    height: 296rpx;
}

.banner-bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 296rpx;
}

.status-box {
    position: relative;
    z-index: 2;
    padding-top: 30rpx;
}

.status-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 14rpx;
}

.status-txt {
    font-size: 36rpx;
    color: rgba(255, 255, 255, 1);
}

.data-menu {
    padding: 50rpx;
    margin-top: -174rpx;
    position: relative;
    z-index: 2;
    background-color: #fff;
}

.data-item {
    margin-bottom: 38rpx;
}

.data-item:last-child {
    margin-bottom: 0;
}

.item-label {
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 42rpx;
    margin-bottom: 16rpx;
}

.upload-icon {
    width: 300rpx;
    height: 300rpx;
}

.item-enter {
    padding-left: 28rpx;
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
}

.item-placeholder {
    color: rgba(153, 153, 153, 1);
}

.btn-box {
    position: fixed;
    width: 100%;
    bottom: 64rpx;
    left: 0;
    padding: 0 62rpx;
}

.btn {
    width: 300rpx;
    line-height: 86rpx;
    text-align: center;
    border-radius: 45rpx;
    font-size: 32rpx;
}

.btn-cancel {
    border: 2rpx solid rgba(153, 153, 153, 1);
    color: rgba(102, 102, 102, 1);
    background-color: #fff;
}

.btn-confirm {
    border: 2rpx solid rgba(252, 127, 3, 1);
    color: rgba(255, 255, 255, 1);
    background: rgba(252, 127, 3, 1);
}
