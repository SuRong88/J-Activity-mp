/* swiper */
.banner-swiper-box {
    position: relative;
}

.banner-swiper {
    width: 100%;
    height: 352rpx;
    padding: 22rpx 0;
    background-color: #fff;
}

.banner-swiper .swiper--img {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    /* margin-left: 20rpx; */
    box-sizing: border-box;
    /*833  54*/
    transform: scale(.846);
    -webkit-transform: scale(.846);
    transition: transform .2s ease;
    -webkit-transition: transform .2s ease;
}

.banner-swiper .swiper--img.active-next {
    transform-origin: 20% 50%;
    -webkit-transform-origin: 20% 50%;
}

.banner-swiper .swiper--img.active-prev {
    transform-origin: 80% 50%;
    -webkit-transform-origin: 80% 50%;
}

.banner-swiper .swiper--img.active {
    transform: scale(1);
    -webkit-transform: scale(1);
}

.swiper-pagination {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 42rpx;
    top: auto;
    height: 8rpx;
    z-index: 10;
}

.swiper-pagination .pagination_block view {
    width: 8px;
    height: 8px;
    background: rgba(252, 127, 3, 0.3);
    margin-right: 22rpx;
    border-radius: 50%;
}

.swiper-pagination .pagination_block view.active {
    background: rgba(252, 127, 3, 1);
}

