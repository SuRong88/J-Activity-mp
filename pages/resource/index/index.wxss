.filter-box {
    padding: 0 40rpx;
}

.filter-hd {
    padding-bottom: 24rpx;
    border-bottom: 2rpx solid rgba(217, 215, 215, 0.3);
}

.filter-select-box {
    background-color: #fff;
    padding: 56rpx 40rpx 46rpx;
}

.filter-select-item {
    font-size: 26rpx;
    color: rgba(252, 127, 3, 1);
    /* line-height:36rpx; */
    margin-right: 60rpx;
    position: relative;
    padding-right: 25rpx;
}

.filter-select-item .delete-icon {
    position: absolute;
    top: -10rpx;
    right: 0;
    width: 20rpx;
    height: 20rpx;
}

.filter-bd {}

.filter-tab-item {
    width: 138rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: rgba(245, 245, 245, 1);
    border-radius: 6rpx;
    color: #999999;
}

.filter-tab-item.active {
    color: #FC7F03;
}

.filter-tab-item.active .item-txt::after {
    border-bottom: 2px solid #FC7F03;
    border-right: 2px solid #FC7F03;
}

.filter-tab-item:nth-child(3) {
    padding-left: 12rpx;
    background-color: transparent;
}

.filter-tab-item:nth-child(4) {
    /* width: 86rpx; */
    text-align: right;
    justify-content: flex-end;
    background-color: transparent;
}

.filter-tab-item:nth-child(3) .item-txt::after,
.filter-tab-item:nth-child(4) .item-txt::after {
    display: none;
}

.filter-tab-item .item-txt {}

.filter-tab-item .item-txt::after {
    content: '';
    display: inline-block;
    width: 0;
    border-top: 2px solid transparent;
    border-left: 2px solid transparent;
    border-bottom: 2px solid #999999;
    border-right: 2px solid #999999;
    margin-left: 8rpx;
}

.sort-icon-box {
    margin-left: 14rpx;
}

.sort-icon {
    width: 0;

}

.sort-icon:first-child {
    border-top: 0rpx solid transparent;
    border-left: 6rpx solid transparent;
    border-bottom: 10rpx solid #999999;
    border-right: 6rpx solid transparent;
    margin-bottom: 4rpx;
}

.sort-icon:last-child {
    border-top: 10rpx solid #999999;
    border-left: 6rpx solid transparent;
    border-bottom: 0rpx solid #999999;
    border-right: 6rpx solid transparent;
}

.filter-bd {
    background-color: #fff;
    position: absolute;
    top: 200rpx;
    left: 0;
    width: 100vw;
    z-index: 2;
}

.filter-con {
    height: 50vh;
}

/* 左边筛选条件 */
.select-list-l {
    width: 280rpx;
    background: rgba(249, 249, 249, 1);
}

.select-list-l .select-item {
    line-height: 120rpx;
    font-size: 30rpx;
    text-align: center;
    color: rgba(102, 102, 102, 1);
    position: relative;
}

.select-list-l .select-item.active {
    color: rgba(252, 127, 3, 1);
}

.select-list-l .select-item.active::before {
    content: '';
    display: block;
    width: 12rpx;
    height: 48rpx;
    background: rgba(252, 127, 3, 1);
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

/* 右边筛选条件 */
.select-list-r {}

.select-list-r-scroll {
    border-right: 2rpx solid #f5f5f5;
}

.select-list-r-scroll:last-child {
    border: 0;
}

.select-list-r .select-item {
    line-height: 120rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    text-align: center;
    position: relative;
}

.select-list-r .select-item.select-item-min {
    font-size: 26rpx;
}

.select-list-r .select-item.active {
    color: rgba(252, 127, 3, 1);
}

.select-list-r .select-item::after {
    content: '';
    display: block;
    position: absolute;
    left: 50%;
    bottom: 0;
    height: 2rpx;
    background-color: #f5f5f5;
    transform: translateX(-50%);
}

.select-list-r .select-item:last-child::after {
    display: none;
}

/* 岗位 */
.filter-type0 .select-list-r .select-item::after {
    width: 232rpx;
}

/* 地区 */
.filter-type1 .select-list-l {
    width: 218rpx;
}

.filter-type1 .select-list-r .select-item::after {
    width: 188rpx;
}

/* 状态 */
.filter-type2 .select-list-r .select-item::after {
    width: 282rpx;
}

.filter-btn-box {
    padding: 26rpx 40rpx;
    border-top: 2rpx solid #F5F5F5;
}

