.content {}

/* 头部 */
.con-hd {
    padding: 66rpx 40rpx;
}

.intro-hd {
    padding-top: 18rpx;
    margin-bottom: 24rpx;
}

.wechat-avatar {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}

.nickname {
    font-size: 32rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
}

.tags {
    padding-bottom: 64rpx;
}

.tags .tag {
    font-size: 22rpx;
    color: rgba(252, 127, 3, 1);
    min-width: 128rpx;
    padding: 0 20rpx;
    line-height: 44rpx;
    background: rgba(252, 127, 3, 0.1);
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.tags .tag:last-child {
    margin-right: 0;
}

.tags .tag:nth-child(n+4) {
    margin-top: 20rpx;
}

.intro-bd {}

.info-box {}

.info-box .item {
    margin-bottom: 30rpx;
}

.info-box .item:last-child {
    margin-bottom: 0rpx;
}

.info-box .item-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 22rpx;
}

.info-box .item-txt {
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    white-space: nowrap;
}

.info-box .item .num {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #FC5403;
}

.info-box .arrow-icon {
    width: 20rpx;
    height: 20rpx;
    margin-left: 20rpx;
}


.info-avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

/* body */
.con-bd {}

.box-tit {
    width: 100vw;
    font-size: 34rpx;
    font-weight: 700;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
    position: relative;
    padding: 0 0 30rpx 40rpx;
}

.box-tit .line {
    margin-left: 30rpx;
    flex-grow: 1;
    height: 2rpx;
    background-color: #F5F5F5;
}

.box-tit::before {
    content: "";
    display: block;
    width: 12rpx;
    height: 48rpx;
    background: rgba(252, 127, 3, 1);
    position: absolute;
    left: 0;
    top: 0;
}

.bd-intro-box {
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 56rpx;
    padding-bottom: 110rpx;
}

.enterprise-role .bd-intro-box {
    padding-bottom: 236rpx;
}

.bd-intro-box .box-con {
    padding: 0 40rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 2;
}
