<import src="/wxParse/wxParse.wxml" />
<view class="container">
    <mp-header showBack title="实名认证"></mp-header>
    <view class="content">
        <view class="info-list">
            <view class="info-item">
                <view class="item-label flex flex-ver">
                    <text>姓名</text>
                    <text class="label-desc">（必填）</text>
                </view>
                <input value="{{name}}" maxlength="10" bindinput="changeInput" data-key="name" placeholder="请输入" placeholder-class=""
                    class="item-enter" type="text" />
            </view>
            <view class="info-item">
                <view class="item-label flex flex-ver">
                    <text>手机号</text>
                    <text class="label-desc">（必填）</text>
                </view>
                <input value="{{phone}}" maxlength="11" bindinput="changeInput" data-key="phone" placeholder="请输入" placeholder-class="holder-class"
                    class="item-enter" type="number" />
            </view>
            <view class="info-item">
                <view class="item-label flex flex-ver">
                    <text>身份证号</text>
                    <text class="label-desc">（必填）</text>
                </view>
                <input value="{{idCard}}" maxlength="18" bindinput="changeInput" data-key="idCard" placeholder="请输入" placeholder-class="holder-class"
                    class="item-enter" type="idcard" />
            </view>
            <view class="info-item">
                <view class="item-label flex flex-ver">
                    <text>银行卡号</text>
                    <text class="label-desc">（必填）</text>
                </view>
                <input value="{{bankCard}}" maxlength="20" bindinput="changeInput" data-key="bankCard" placeholder="请输入" placeholder-class="holder-class"
                    class="item-enter" type="number" />
            </view>

        </view>
        <view class="protocol-list">
            <view bindtap="showAgreement" data-index="0" class="protocol-item">
                《用户服务协议》
            </view>
            <view bindtap="showAgreement" data-index="1" class="protocol-item">
                《隐私协议》
            </view>
        </view>
        <view bindtap="authHandle" class="common-btn">
            实名认证
        </view>
        <view hidden class="common-btn">
            签署电子协议
        </view>
    </view>
    <mp-popBox wx:if="{{showMask}}" cln="''" title="{{pass?'实名认证通过':'实名认证不通过，请重新认证'}}" bind:confirm='confirmHandle' bind:cancel='cancelHandle'
        showCancel="{{false}}" confirmText="{{pass?'签约入驻':'确定'}}">
    </mp-popBox>
    <!-- 用户协议 -->
    <mp-popBox wx:if="{{showAgreement}}" cln="'agreement-popBox'" title="{{agreementList[agreementIndex].title}}" showContent
        bind:confirm='closeAgreement' bind:cancel='closeAgreement' showCancel='{{false}}' confirmText="知道了">
        <view class="text-j">
            <!-- == wxParse == -->
            <template is="wxParse" data="{{wxParseData: agreementTxt.nodes}}"></template>
            <!--== /wxParse ==-->
        </view>
    </mp-popBox>
    <!-- 用户协议 end -->
</view>
