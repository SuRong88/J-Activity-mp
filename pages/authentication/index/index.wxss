.content {
    padding: 48rpx 34rpx;
}

.link-item {
    margin-bottom: 40rpx;
    height: 202rpx;
    position: relative;
}

.link-item:last-child {
    margin-bottom: 0;
}

.item-img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.item-tit {
    position: relative;
    z-index: 2;
    padding-left: 112rpx;
    font-size: 34rpx;
    font-weight: 700;
    color: rgba(254, 127, 0, 1);
    letter-spacing: 4rpx;
}
