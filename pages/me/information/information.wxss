.item-con {
    position: relative;
}

.submit-btn {
    margin: 0 auto 52rpx;
}



.item-avatar {
    position: relative;
    width: 130rpx;
    height: 130rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.avatar {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.15);
}

.edit-avatar {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.15);
}

.edit-icon {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.item-info-enter {
    width: 100%;
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 8rpx;
    font-size: 28rpx;
    color: rgba(153, 153, 153, 1);
    padding: 0 28rpx;
}

.enter-textarea01 {
    height: 276rpx;
    padding: 22rpx 28rpx 60rpx;
}

.enter-textarea02 {
    padding: 22rpx 28rpx;
    height: 178rpx;
}

.enter-placeholder {
    color: rgba(153, 153, 153, 1);
}

.txt-num-box {
    position: absolute;
    right: 34rpx;
    bottom: 26rpx;
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
}

.type-scroll-box {
    height: 88rpx;
}

.type-list {
    margin-top: 8rpx;
    height: 80rpx;
}

.type-item {
    position: relative;
    font-size: 30rpx;
    color: rgba(252, 127, 3, 1);
    text-align: center;
    margin-right: 28rpx;
    min-width: 200rpx;
    line-height: 76rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx;
    border: 2rpx solid rgba(252, 127, 3, 1);
}

.type-item:last-child {
    margin-right: 0;
}

.remove-icon {
    position: absolute;
    right: -8rpx;
    top: -8rpx;
    width: 32rpx;
    height: 32rpx;
}


