/* pages/me/index/index.wxss */
page {
    background-color: #F9F9F9 !important;
}

.con-hd {
    height: 412rpx;
    position: relative;
    padding-top: 48rpx;
    padding-left: 58rpx;
}

.banner-img {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.user-info-box {
    position: relative;
    z-index: 2;
}

.user-box {}

.avatar {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.name-status {
    padding-left: 36rpx;
}

.user-name {
    font-size: 36rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
    margin-bottom: 16rpx;
}

.user-status {
    width: 100rpx;
    text-align: center;
    line-height: 30rpx;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 6rpx;
}

.status-icon {
    width: 22rpx;
    height: 22rpx;
    margin-right: 2rpx;
}

.status-txt {
    font-size: 20rpx;
    color: rgba(255, 255, 255, 1);
}

.user-tags {
    padding-top: 16rpx;
    padding-left: 166rpx;

}



.tag {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 1);
}

.tag-spe {
    width: 2rpx;
    height: 18rpx;
    background-color: #fff;
    margin: 0 24rpx;
}

.complete-info {
    position: absolute;
    top: 36rpx;
    right: 0;
    width: 158rpx;
    line-height: 60rpx;
    text-align: center;
    padding-left: 10rpx;
    background: linear-gradient(90deg, rgba(255, 195, 24, 1) 0%, rgba(250, 145, 0, 1) 100%);
    border-radius: 200rpx 0px 0px 200rpx;
}

.complete-txt {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 1);
}

.arrow-icon {
    margin-left: 2rpx;
    width: 20rpx;
    height: 20rpx;
    vertical-align: top;
}


.con-bd {}

.tool-bar {
    padding: 26rpx 10rpx 28rpx;
    margin: -120rpx auto 20rpx;
    width: 710rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    position: relative;
    z-index: 3;
}

.tool-top {
    padding: 0 36rpx;
    padding-bottom: 14rpx;
    border-bottom: 2rpx solid #F6F6F6;
}

.tool-tit {
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    letter-spacing: 2rpx;
}

.tool-view-all {}

.view-all {
    font-size: 22rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 32rpx;
}

.item-arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.tool-tab {
    padding-top: 36rpx;
}

.tab-item {
    text-align: center;
}

.tab-icon {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 14rpx;
}

.tab-txt {
    font-size: 22rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 32rpx;
}

.menu-list {
    background-color: #fff;
    padding: 0 40rpx;

}

.menu-item {
    padding: 30rpx 0;
    position: relative;
    border-bottom: 2rpx solid #F6F6F6;
}

.menu-item .item-icon {
    width: 48rpx;
    height: 48rpx;
}

.menu-item .item-txt {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    letter-spacing: 2rpx;
    padding-left: 26rpx;
}

.menu-item .item-arrow {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}


.qrcode{
    display: block;
    width: 300rpx;
    height: 300rpx;
    margin: 0 auto 12rpx;
    /* margin-bottom: 32rpx; */
}